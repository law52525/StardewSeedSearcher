{
  "version": 2,
  "builds": [
    {
      "src": "api/index.go",
      "use": "@vercel/go",
      "config": {
        "buildCommand": "go build -o main api/index.go",
        "outputDirectory": ".",
        "includeFiles": [
          "pkg/**/*",
          "go.mod",
          "go.sum",
          "index.html"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/ws",
      "dest": "/ws"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
        "src": "/", 
        "dest": "index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}

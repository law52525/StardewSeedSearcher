{
  "version": 2,
  "builds": [
    {
      "src": "api/index.go",
      "use": "@vercel/go",
      "config": {
        "buildCommand": "go build -o main api/index.go",
        "outputDirectory": ".",
        "includeFiles": [
          "internal/**/*",
          "go.mod",
          "go.sum"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/ws",
      "dest": "/ws"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/index.go": {
      "maxDuration": 60
    }
  }
}

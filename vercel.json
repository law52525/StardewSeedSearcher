{
  "version": 2,
  "builds": [
    {
      "src": "api/index.go",
      "use": "@vercel/go",
      "config": {
        "buildCommand": "go build -o main api/index.go",
        "outputDirectory": ".",
        "includeFiles": [
          "pkg/**/*",
          "go.mod",
          "go.sum",
          "index.html",
          "public/**/*"
        ]
      }
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.go"
    }
  ]
}

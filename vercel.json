{
  "version": 2,
  "builds": [
    {
      "src": "api/index.go",
      "use": "@vercel/go",
      "config": {
        "buildCommand": "go build -o main api/index.go",
        "outputDirectory": ".",
        "includeFiles": [
          "pkg/**/*",
          "go.mod",
          "go.sum"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/ws",
      "dest": "/api/index.go"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.go"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api/index.go"
    }
  ]
}
